{
  "name": "validate-framework",
  "version": "3.0.0",
  "description": "轻量、强大、无依赖、前后端通用的 JavaScript 验证组件",
  "homepage": "https://github.com/MinJieLiu/validator.js",
  "main": "dist/validator.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src --fix",
    "dev": "better-npm-run dev --watch",
    "build": "better-npm-run dev",
    "prod": "better-npm-run prod",
    "deploy": "npm run lint && npm run clean && npm run build && npm run prod",
    "test": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prod": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MinJieLiu/validator.js"
  },
  "keywords": [
    "validate-framework",
    "validator",
    "validator.js",
    "validation",
    "validate",
    "validate.js",
    "express-validate",
    "formValidate",
    "form"
  ],
  "author": "LMY",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "better-npm-run": "0.0.11",
    "chai": "^3.5.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "mocha": "^3.1.0",
    "mocha-phantomjs": "^4.1.0",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2"
  }
}
